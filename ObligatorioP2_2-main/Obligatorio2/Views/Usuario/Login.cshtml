<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="formularioRegistro">
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <input type="text" name="nombreUsuario" id="nombre" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contraseña</label>
                <input type="password" name="password" id="password" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p id="pMensaje">@ViewBag.msg</p>
<div>
    <h6>No estas registrado?</h6>
    <a asp-action="Registro">Registrarse</a>
</div>

@* VALIDACION EN JS *@
@section Scripts{
    <script>
        document.querySelector("#formularioRegistro").addEventListener('submit', validarDatos);

        function validarDatos(evento) {
            evento.preventDefault();
            let nombre = document.querySelector("#nombre").value;
            let password = document.querySelector("#password").value;

            if (nombre != "" && password != "") {
                this.submit();
            }else{
                document.querySelector("#pMensaje").innerHTML = "Los datos no pueden estar vacíos";
            }



           }
    </script>
}