<h1>Login</h1>
<form method="post">
    <label>Usuario</label>
    <input type="text" name="nombreUsuario" />
    <label>Password</label>
    <input type="password" name="password" />

    <input type="submit" value="Ingresar" />
</form>
<h3>No estas registrado?</h3><br />
<a asp-action="Registro">Registrarse</a>

<p>@ViewBag.msg</p>