<!-- #endregion Page Header -->

<h4>Comprar entradas</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">ID Acticidad</label>
                <input type="text" name="idActividad" value="@ViewBag.Actividad.Id_actividad" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre de la Actividad</label>
                <input type="text" value="@ViewBag.Actividad.Nombre" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Categoria</label>
                <input type="text" value="@ViewBag.Actividad.Categoria.Nombre" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y hora</label>
                <input type="text" value="@ViewBag.Actividad.Fecha_y_hora" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Lugar</label>
                <input type="text" value="@ViewBag.Actividad.Lugar.Nombre" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Edad Mínima</label>
                <input type="text" value="@ViewBag.Actividad.Edad_minima" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad de MG</label>
                <input type="text" value="@ViewBag.Actividad.Cantidad_me_gusta" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio Final</label>
                <input type="text" value="@ViewBag.Actividad.CalcularPrecioFinal()" readonly class="form-control" />
                <span class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label">Cantidad de entradas</label>
                <input type="number" name="cantEntradas" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h3>@ViewBag.msg</h3>
<a asp-action="List">Volver</a>